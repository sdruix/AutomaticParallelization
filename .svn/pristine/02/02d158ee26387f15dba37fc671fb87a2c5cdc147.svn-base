#!/bin/bash

if [ -z "" -o "no" = "no" ];
then

cat <<EOF
test_ignore=yes
EOF
  
exit

fi

source /home/jonah/Projects/mcxx/tests/config/mercurium-libraries

cat <<EOF
MCC="/home/jonah/Projects/mcxx/src/driver/mcxx --output-dir=/home/jonah/Projects/mcxx/tests --profile=sscc --config-file=/home/jonah/Projects/mcxx/config/config.sscc --verbose"
MCXX="/home/jonah/Projects/mcxx/src/driver/mcxx --output-dir=/home/jonah/Projects/mcxx/tests --profile=sscxx --config-file=/home/jonah/Projects/mcxx/config/config.sscc --verbose"
EOF

if [ ! -z "" ];
then

cat <<EOF
compile_versions="\${compile_versions} sscc_plain sscc_no_xlate"

test_CC_sscc_plain="\${MCC}"
test_CXX_sscc_plain="\${MCXX}"

test_CC_sscc_no_xlate="\${MCC}"
test_CXX_sscc_no_xlate="\${MCXX}"

test_CFLAGS_sscc_no_xlate="--variable=do_not_create_translation_function:1"
test_CXXFLAGS_sscc_no_xlate="--variable=do_not_create_translation_function:1"
EOF

fi
