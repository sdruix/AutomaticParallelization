#!/bin/bash

# Basic mercurium generator

if [ ! -e "mercurium" ];
then
# Mercurium default

source /home/jonah/Projects/mcxx/tests/config/mercurium-libraries

cat <<EOF
MCXX="/home/jonah/Projects/mcxx/src/driver/mcxx --output-dir=/home/jonah/Projects/mcxx/tests --config-file=/home/jonah/Projects/mcxx/config/config.plain --verbose"
test_CC="\${MCXX} --profile=plaincc"
test_CXX="\${MCXX} --profile=plaincxx"
test_FC="\${MCXX} --profile=plainfc"
test_nolink=yes
EOF
else
    # If current directory has a generator, use it
    ./mercurium
fi
