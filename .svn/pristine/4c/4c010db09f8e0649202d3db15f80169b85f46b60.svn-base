#!/bin/bash

if [ -z "" ];
then

cat <<EOF
test_ignore=yes
EOF
  
exit

fi

source /home/jonah/Projects/mcxx/tests/config/mercurium-libraries

cat <<EOF
MCC="/home/jonah/Projects/mcxx/src/driver/mcxx --output-dir=/home/jonah/Projects/mcxx/tests --profile=mcc --config-file=/home/jonah/Projects/mcxx/config/config.omp --verbose"
MCXX="/home/jonah/Projects/mcxx/src/driver/mcxx --output-dir=/home/jonah/Projects/mcxx/tests --profile=mcxx --config-file=/home/jonah/Projects/mcxx/config/config.omp --verbose"
EOF

if [ ! -z "" ];
then

cat <<EOF
compile_versions="nanos4_plain"
EOF

cat <<EOF
test_CC_nanos4_plain="\${MCC}"
test_CXX_nanos4_plain="\${MCXX}"

test_CFLAGS_nanos4_plain=
test_CXXFLAGS_nanos4_plain=
EOF

if [ ! -z "" ];
then

cat <<EOF
compile_versions="\${compile_versions} nanos4_instrument"

test_CC_nanos4_instrument="\${test_CC_nanos4_plain}"
test_CXX_nanos4_instrument="\${test_CXX_nanos4_plain}"

test_CFLAGS_nanos4_instrument="\${test_CFLAGS_nanos4_plain} --instrument"
test_CXXFLAGS_nanos4_instrument="\${test_CXXFLAGS_nanos4_plain} --instrument"
EOF

fi

fi

cat <<EOF
test_nolink=yes
EOF
